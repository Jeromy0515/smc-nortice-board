<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

 <mapper namespace="com.noticeboard.smc.mybatis.mapper.TokenMapper">
 	
 	<select id="getEnableTokenByUserId" resultType="TokenDTO">
 		SELECT user_id, refresh_token FROM token WHERE user_id LIKE #{userId} AND enable = 1
 	</select>
 	
 	<insert id="insertToken">
 		INSERT INTO token VALUES(#{userId},#{refreshToken},1)
 	</insert>
 	
 	<update id="setTokenUnable">
 		UPDATE token SET enable = 0 WHERE user_id LIKE #{userId}
 	</update>
 	
</mapper>